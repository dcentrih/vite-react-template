# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,jsx,ts,tsx,cjs,mjs}]
indent_size = 2

[*.{json,md,yml,yaml}]
indent_size = 2

[*.{css,scss,sass,less,html,xml,svg}]
indent_size = 4
